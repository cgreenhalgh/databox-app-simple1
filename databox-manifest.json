	"description": "A simple Databox app in Node.js",
	"author": "Chris Greenhalgh <chris.greenhalgh@nottingham.ac.uk>",
	"license": "MIT",
	"tags": [
		"app",
		"nodejs"
	],

	"homepage": "https://github.com/cgreenhalgh/databox-app-simple1",
